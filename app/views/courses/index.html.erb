<div class="row">
  <div class="col-md-12">
    <h1 class="text-center my-3">Welcome</h1>

    <div class="course">
      <%= link_to "New course", new_course_path, class: "btn btn-primary float-right my-3" %>
    </div>

    <table class="table">
      <thead>
        <tr>
          <td>#</td>
          <td>Title</td>
          <td width="70%">Description</td>
          <td>Actions</td>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
        <tr>
          <td><%= course.id %></td>
          <td><%= link_to course.title, course_path(course) %></td>
          <td><%= simple_format course.description %></td>
          <td>
            <%= link_to "Edit", edit_course_path(course), class: "btn btn-sm btn-secondary" %>
            <%= link_to "Delete", course_path(course), class: "btn btn-sm btn-danger",
            method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
